
<table class="table">
<% @songs = Song.all %>

<%= link_to 'New song', new_song_path %>

<div class="row">
  <% @songs.each do |song| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">

        <div class="caption">
          <h3><%= link_to song.name, song %></h3>
          <p><%= song.artist.name %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>