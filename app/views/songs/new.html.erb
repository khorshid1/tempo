<h1>Enter a New Song</h1>

<%= form_for @song do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :year_released %>
    <%= form.text_field :year_released, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :artist_id %>
    <%= form.collection_select :artist_id, Artist.order(:name), :id, :name, { include_blank: true }, { class: "form-control" } %>
  </div>

  <%= form.button 'Create Song', class: "btn btn-success" %>
<% end %>