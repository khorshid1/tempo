<table class="table">
<% @artists = Artist.all %>

<div class="row">
  <% @artists.each do |artist| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">

        <div class="caption">
          <h3><%= link_to artist.name, artist %></h3>

        </div>
      </div>
    </div>
 <% end %>
</div>